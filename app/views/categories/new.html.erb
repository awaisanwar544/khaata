<% if @errors.present? %>
  <div>
    <ul>
      <% @errors.each do |error| %>
        <li> <%= error %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="d-flex align-items-center bg-main-color">
  <div class="col-4">
    <%= link_to "Back", categories_path, class: "btn btn-white m-3", role: "button" %>
  </div>
  <div class="d-flex justify-content-center col-4 text-white">
    <h1>Categories</h1>
  </div>
</div>


<%= form_for @category, multipart: true do |form| %>
  <div class="form-group">
    <%= form.label :name%>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter category name" %>
  </div>

   <div class="form-group">
    <%= form.label :icon%>
    <%= form.file_field :icon, class: "form-control", placeholder: "paste link to the icon" %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-second-color w-100 rounded-0 fixed-bottom" %>
  </div>
<% end %>